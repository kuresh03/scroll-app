<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/main_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/glass_background"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/glass_text_primary"
            android:layout_marginBottom="48dp"/>

        <android.widget.Button
            android:id="@+id/btnEnableAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Accessibility Service"
            android:background="@drawable/glass_button_background"
            android:textColor="@color/glass_text_primary"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <android.widget.Button
            android:id="@+id/btnEnableOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Overlay Permission"
            android:background="@drawable/glass_button_background"
            android:textColor="@color/glass_text_primary"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <android.widget.Button
            android:id="@+id/btnStartWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Floating Widget"
            android:background="@drawable/glass_button_background"
            android:textColor="@color/glass_text_primary"
            android:padding="12dp"
            android:enabled="false"/>

    </LinearLayout>

</LinearLayout>
